cmake_minimum_required(VERSION 2.8)
project(soundy)
find_package(OpenCV REQUIRED)
find_package(portaudio REQUIRED)
set(CMAKE_CXX_FLAGS "-g -Wall")
add_executable(TestAudio audio.cpp TestAudio.cpp)
add_executable(TestColorTracker TestColorTracker.cpp colortracker.cpp)
target_link_libraries(TestColorTracker ${PORTAUDIO_LIBRARIES} ${OpenCV_LIBS})
target_link_libraries(TestAudio ${PORTAUDIO_LIBRARIES} ${OpenCV_LIBS})
